{
  "name": "pauperial",
  "version": "2.0.0",
  "private": true,
  "description": "Simple tool for making short links or QR-code for your looong links, upload and share your images with one click!",
  "engines": {
    "node": ">= 16"
  },
  "workspaces": [
    "apps/*"
  ],
  "prisma": {
    "schema": "apps/backend/prisma/schema.prisma"
  },
  "scripts": {
    "start": "pnpm start:backend",
    "build": "pnpm --filter=@pauperial/backend build && pnpm --filter=@pauperial/frontend build",
    "start:backend": "pnpm --filter=@pauperial/backend start",
    "start:frontend": "pnpm --filter=@pauperial/frontend start",
    "dev:frontend": "pnpm --filter=@pauperial/frontend dev",
    "dev:backend": "pnpm --filter=@pauperial/backend dev"
  },
  "repository": "https://github.com/LWJerri/Pauperial",
  "author": "LWJerri (lwjerri.js.org)",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  }
}
